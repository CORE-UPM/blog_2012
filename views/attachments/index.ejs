<header>
   <h2> <div class='pull-right'>
          <span class='badge badge-info'> <%= attachments.length %> </span>
          <i class='icon-file icon-white'></i>
        </div>
         Adjuntos </h2>
</header>


<ul class="thumbnails">
  <% for (var i in attachments) { %>
      <li class='span2'>
        <div class="thumbnail">

          <a href='<%= attachments[i].url %>' type='<%= attachments[i].mime %>' target='_blank'>
                 <%= attachments[i].filename %>
          </a>

          <br />


          <em> <%= attachments[i].updatedAt.toLocaleDateString() %> </em>

          <br />

          <% if (attachments[i].mime.match(/^image\//)) { %>
            <img src='<%= attachments[i].url %>'>
          <% } %>

          <% if (session.user && session.user.id == post.authorId) {%>

              <% var form_name = 'fai' + i; %>

              <form style='display:inline;'
                    method='post' action='/posts/<%= post.id %>/attachments/<%= attachments[i].id %>'
                    name='<%= form_name %>'>
                <input type='hidden' name='_method' value='delete'>

                <button class='btn btn-danger btn-mini' href='#' onclick="this.parentNode.submit()">
                  <i class='icon-trash icon-white'></i> Borrar
                </button>

              </form>

          <% } %>


        </div>
      </li>
  <% }; %>
</ul>

<footer>
  <nav>

    <% if (session.user && session.user.id == post.authorId) {%>

       <a class='btn btn-success' href="/posts/<%= post.id %>/attachments/new">
	<i class="icon-upload icon-white"></i> Subir Adjunto
       </a>

    <% } %>

  </nav>
</footer>
