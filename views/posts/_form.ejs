<div class='control-group <%- locals.validate_errors && validate_errors.title "invalid_field" : "field" %>'>
	<label class="control-label" for="post_title">Título:</label>
	<div class="controls">
		<input type="text" id="post_title" name="post[title]" class="input-xlarge"
		size="80" placeholder="<%= post.title %>" />
		<p class="help-block">Introduzca el título del post</p>
	</div>
</div>

<div class='control-group <%- locals.validate_errors && validate_errors.body 
		? "invalid_field" : "field" %>'>
	<label class="control-label" for="post_title">Contenido:</label>
	<div class="controls">
		<textarea id="post_body" name="post[body]" cols="80"
		rows="20" placeholder="<%= post.body %>"></textarea>
		<p class="help-block">Introduzca el contenido del post</p>
	</div>
</div>

<button type="submit" class="btn btn-success">Guardar</button>
<button type="reset" class="btn">Borrar</button>
