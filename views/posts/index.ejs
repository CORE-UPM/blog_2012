<link rel="stylesheet" type="text/css" href="../css/style.css" />
<script type="text/javascript" src="../js/modernizr-1.5.min.js"></script>


<div class="recuadro">
<a href="/posts/new"> Crear nuevo Post </a>
</div>
<br>

<% for (var i in posts) { %>

 <img style="float: left; vertical-align: middle; margin: 0 10px 0 0;" src="images/home.png" alt="home" />
 
   <div class="post">
    <div class="page-header">
      <h1>
        <a href='/posts/<%= posts[i].id %>' class='titlelink'> <%= posts[i].title %> </a>
        <br>
        <small> por <em> <%= posts[i].author && posts[i].author.name || "Sin autor" %> </em></small>
      </h1>

     <em> <%= posts[i].updatedAt.toLocaleDateString() %></em>
   </div>
<div align="justify">
 <%= posts[i].body.slice(0,300) %> 
</div>
</div>

<% if (session.user && session.user.id ==posts[i].authorId) {%>
<div>

<form class="post_actions" method='post' action='/posts/<%= posts[i].id %>'>
<input type='hidden' name='_method' value='delete'>
<a href="/posts/<%= posts[i].id %>/edit"> Editar</a>
<a href="" onclick="submit();return false"> Borrar </a>
</form>
</div>

<% } %>
<p class="comments_number"><a href='/posts/<%= posts[i].id %>' ><%=posts[i].comments.length %> comentario<% if(posts[i].comments.length!=1) {%>s<%}%>  </a> </p>
<br><br>

<% }; %>