

 <div class="post">
    <div class="page-header">
    
      <h1>
        <%= post.title %>
        <small>por <em> <%= post.author && post.author.name || "Sin autor" %> </em></small>
      </h1>
     <em> <%= post.updatedAt.toLocaleDateString() %></em>
     <div class="pull-right">
        <% if (post.fav&&session.user){
            if (post.fav.authorId==session.user.id) { %>

                  <form action="/users/<%= session.user.id%>/favourites/<%= post.fav.id %>" method="post">
                  <input type='hidden' name='_method' value='delete'>
                  <input type="image" value="delete" class='fav'src="/images/fav_on.jpg" />
                  </form>
  
                <% }else{ %>

                <form action="/users/<%= session.user.id%>/favourites/<%= post.id %>" method='post'>
                  <input type="image" class='fav' src="/images/fav_off.jpeg" />
                  </form>
                  
                  <%}} else if(session.user){ %>

                <form action="/users/<%= session.user.id%>/favourites/<%= post.id %>" method='post'>
                  <input type="image" class='fav' src="/images/fav_off.jpeg" />
                  </form>
        <% } %>
        </div>
        <div class='pull-center'>
            Comentarios: <span class='badge badge-info'>  <%= num_com%> </span>
            <i class='icon-comment'></i> 
        </div>
   </div>

   <p><%- escapeText(post.body) %></p>

   <% if (session.user && session.user.id == post.authorId) {%>  
     <a href="/posts/<%= post.id %>/edit"> Editar </a>
   <% } %>
</div>

<hr />
