

 <div class="post">
    <div class="page-header">
      <div id="star">
        <% if ( session ) { %>
          <% if ( session.user ) { %>
            <% if ( !post.favourite ) { %>
              <a href="/favourite"><img src="../images/starG.png"></a>
            <% } else {%>
              <a href="/favourite"><img src="../images/starY.png"></a>
            <% } %>
          <% } %>
        <% } %>
      </div>
      <h1>
        <%= post.title %>
        <small>por <em> <%= post.author && post.author.name || "Sin autor" %> </em></small>
      </h1>
     <em> <%= post.updatedAt.toLocaleDateString() %></em>
   </div>

   <p><%- escapeText(post.body) %></p>
   <i  style="font-size:15px"><%= comentarios %> comentarios.<i>
   <% if (session.user && session.user.id == post.authorId) {%>  
     <a href="/posts/<%= post.id %>/edit"> Editar </a>
   <% } %>
</div>

<hr />
<%- include ../attachments/index.ejs %>
<hr />
<%- include ../comments/index.ejs %>
<hr />


<% if (session.user) { %>
   <blockquote>
      <%- include ../comments/new.ejs %> 
   </blockquote>
   <hr />
<% } %>

